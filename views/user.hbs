        <div class="container">
           
            <div class="row">
                    <table class="table">
                        <thead  class="thead-dark">
                            <tr>
                            <th >Index</th>
                            <th >UserName</th>
                            <th >Password</th>
                            <th >FullName</th>
                            <th >Email</th>
                            <th >PhoneNumber</th>
                            <th >Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            {{#each user}}
                            <tr>
                                <th scope="row"> {{@key}}</th>
                                <td>{{this.UserName}}</td>
                                <td>{{this.Password}}</td>
                                <td>{{this.FullName}}</td>
                                <td>{{this.Email}}</td>
                                <td>{{this.PhoneNumber}}</td>
                                <td>

                                   
                                    
                                    <form  action="/user/{{this._id}}?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="submit" class="btn btn-danger" role="button" value="Delete">
                                    </form>
                                    


                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
            </div>
        </div>
